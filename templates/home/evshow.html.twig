                        <!--/.tab-content-->
                    </div>
                    <!--/.media-body-->
                </div>
                <!--/.media-->
            </div>
            <!--/.tab-wrap-->
        </div>
    </div>
    <!--/.container-->
</section>
<!--/#content-->
{% endblock %}